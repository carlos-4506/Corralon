@model IEnumerable<LogisticaCorralon.Models.ProductoModel>

<h2>Productos</h2>

<a asp-action="Create">Crear Nuevo Producto</a>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Cantidad</td>
                <td>@producto.Precio</td>
                <td>@producto.Estado</td>
                <td>

                    <a asp-action="Edit" asp-route-id="@producto.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@producto.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
