@model LogisticaCorralon.Models.ProductoModel

<h2>Eliminar Producto</h2>

<div>
    <h4>¿Estás seguro de que deseas eliminar este producto?</h4>
    <p>Nombre: @Model.Nombre</p>
    <p>Descripción: @Model.Descripcion</p>
    <p>Cantidad: @Model.Cantidad</p>
    <p>Precio: @Model.Precio</p>
    <p>Estado: @Model.Estado</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Eliminar</button>
    <a asp-action="Index">Cancelar</a>
</form>
